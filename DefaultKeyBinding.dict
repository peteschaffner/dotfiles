// ^ : Control
// ~ : Option
// $ : Shift
// @ : Command

{
    "^j" = "moveDown:";
    "^k" = "moveUp:";
    "^h" = "moveLeft:";
    "^H" = (moveToBeginningOfParagraph:, insertText:, " ", moveLeft:, selectWord:, moveRight:, setMark:, moveToBeginningOfParagraph:, deleteForward:, swapWithMark:, moveLeft:);
    "^l" = "moveRight:";
    "^L" = "moveToEndOfLine:";
}

